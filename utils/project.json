{
  "name": "utils",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "utils/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx lint utils",
          "nx test utils",
          "nx build-lib utils",
          "node utils/tools/copyright.mjs"
        ],
        "parallel": false
      }
    },
    "build-lib": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "rootDir": "utils/src",
        "outputPath": "dist/utils",
        "main": "utils/src/index.ts",
        "tsConfig": "utils/tsconfig.lib.json",
        "assets": ["*.md", "LICENSE.txt"],
        "additionalEntryPoints": [
          "utils/src/arr/index.ts",
          "utils/src/obj/index.ts",
          "utils/src/str/index.ts",
          "utils/src/num/index.ts",
          "utils/src/dom/index.ts",
          "utils/src/env/index.ts"
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "utils/jest.config.ts"
      }
    }
  },
  "tags": []
}
